<!doctype html>
<html lang="en">
<head>
  <%- partial("../_partials/_metatags") %>
  <title><%= title %> - <%= page_title %></title>
  <%- partial("../_partials/_stylesheet", {css_path: "../css"}) %>
  <link rel="icon" type="image/ico" href="../img/favicon.ico"/>
</head>
<body data-page-name="<%= submenu_title !== false ? submenu_title : '' %> ">
  <%- partial("../_partials/_header") %>
